            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="1"
            android:textColor="#3F51B5"
            android:textSize="28sp"
            android:paddingRight="6dp"
            android:background="@drawable/tile_hover"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="1"
            android:textColor="#3F51B5"
            android:textSize="28sp"
            android:paddingRight="6dp"
            android:background="@drawable/tile_hover"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_13"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/tile_hover"
            android:layout_weight="1"
            android:paddingRight="6dp"
            android:text=""
            android:textColor="#3F51B5"
            android:textSize="28sp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/tile_hover"
            android:layout_weight="1"
            android:paddingRight="6dp"
            android:text=""
            android:textColor="#3F51B5"
            android:textSize="28sp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/tile_hover"
            android:layout_weight="1"
            android:paddingRight="6dp"
            android:text=""
            android:textColor="#3F51B5"
            android:textSize="28sp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/tile_hover"
            android:layout_weight="1"
            android:paddingRight="6dp"
            android:text=""
            android:textColor="#3F51B5"
            android:textSize="28sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_hang3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/ll_hang4"
        android:layout_alignLeft="@id/ll_hang4"
        android:layout_above="@id/ll_hang4"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/tile_hover"
            android:layout_weight="1"
            android:paddingRight="6dp"
            android:text=""
            android:textColor="#3F51B5"
            android:textSize="28sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_2"
            android:layout_width="0dp"
